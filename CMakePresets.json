{
    "version": 4,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 23,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "configure-vs2022",
            "description": "Generate a Visual Studio 2022 solution file",
            "generator": "Visual Studio 17 2022",
            "architecture": "x64",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCINSTALLDIR}/scripts/buildsystems/vcpkg.cmake",
                "VCPKG_TARGET_TRIPLET": "x64-windows-static"
            }
        },
        {
            "name": "configure-xcode",
            "description": "Generate an Xcode project",
            "generator": "Xcode",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            }
        },
        {
            "name": "vcpkg-standalone",
            "displayName": "Use standalone vcpkg",
            "description": "Expects the environment variable \"VCPKG_ROOT\" to point to the vcpkg install directory",
            "cacheVariables": {
                "CMAKE_TOOLCHAIN_FILE": "$env{VCPKG_ROOT}/scripts/buildsystems/vcpkg.cmake"
            },
            "hidden": true
        },
        {
            "name": "Release",
            "displayName": "Release",
            "inherits": "vcpkg-standalone",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "RelWithDebInfo"
            }
        },
        {
            "name": "Debug",
            "displayName": "Debug",
            "inherits": "vcpkg-standalone",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug"
            }
        }
    ]
}